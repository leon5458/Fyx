<leon.com.fyx.lmenu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/leon.com.fyx"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="none"
    zhy:rightPadding="100dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/layout_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/imgs">

            <leon.com.fyx.view.water
                android:id="@+id/bezier_view"
                android:layout_marginTop="20dp"
                android:onClick="toggleMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/leftmenu" />


        </LinearLayout>
    </LinearLayout>

</leon.com.fyx.lmenu.SlidingMenu>